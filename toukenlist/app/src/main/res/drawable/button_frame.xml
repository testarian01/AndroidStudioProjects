<?xml version="1.0" encoding="utf-8"?>
<!-- layer-listでitemを重ねられます。 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- item① -->
    <item>
        <!-- shape:rectangle(=四角形) -->
        <shape android:shape="rectangle">
            <!-- item②に対して2dp内側に入る。 -->
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <!-- 色:赤 -->
            <solid android:color="#E60012" />
        </shape>
    </item>

    <!-- item② -->
    <item>
        <!-- shape:rectangle(=四角形) -->
        <shape android:shape="rectangle">
            <!-- item③に対して2dp内側に入る。 -->
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <!-- 色:白 -->
            <solid android:color="#333333" />
        </shape>
    </item>

    <!-- item③ -->
    <item>
        <!-- shape:rectangle(=四角形) -->
        <shape android:shape="rectangle">
            <!-- 色:赤 -->
            <solid android:color="#E60012" />
        </shape>
    </item>

</layer-list>